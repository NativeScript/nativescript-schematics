{
  "compileOnSave": false,
  "compilerOptions": {
      "outDir": "./dist/out-tsc",
      "module": "ESNext",
      "target": "es2015",
      "moduleResolution": "node",
      "sourceMap": true,
      "declaration": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "noEmitHelpers": true,
      "noEmitOnError": true,
      "skipLibCheck": true,
      "lib": [
          "es2017",
          "dom",
          "es6"
      ],
      "baseUrl": ".",
      "paths": {
          "@src/*": [
              "<%= sourcedir %>/*.android.ts",
              "<%= sourcedir %>/*.ios.ts",
              "<%= sourcedir %>/*.tns.ts",
              "<%= sourcedir %>/*.web.ts",
              "<%= sourcedir %>/*.ts"
          ]
      }
  }
}
