{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "cli": {
    "defaultCollection": "@nativescript/schematics"
  },
  "projects": {
    "<%= name %>": {
      "root": "",
      "sourceRoot": "<%= sourcedir %>",
      "projectType": "application",
      "prefix": "<%= prefix %>",
      "schematics": {<% if(style === 'scss') { %>
        "@nativescript/schematics:component": {
          "style": "scss"
        }
      <% } %>},
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/<%= name %>",
            "index": "<%= sourcedir %>/index.html",
            "main": "<%= sourcedir %>/main.ts",
            "polyfills": "<%= sourcedir %>/polyfills.ts",
            "tsConfig": "tsconfig.app.json",
            "assets": [
              "<%= sourcedir %>/favicon.ico",
              "<%= sourcedir %>/assets"
            ],
            "styles": [
              "<%= sourcedir %>/styles.<%= style %>"
            ],
            "scripts": []
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "<%= sourcedir %>/environments/environment.ts",
                  "with": "<%= sourcedir %>/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "aot": true,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "<%= name %>:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "<%= name %>:build:production"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "<%= name %>:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "<%= sourcedir %>/test.ts",
            "polyfills": "<%= sourcedir %>/polyfills.ts",
            "tsConfig": "tsconfig.spec.json",
            "karmaConfig": "karma.conf.js",
            "styles": [
              "<%= sourcedir %>/styles.<%= style %>"
            ],
            "scripts": [],
            "assets": [
              "<%= sourcedir %>/favicon.ico",
              "<%= sourcedir %>/assets"
            ]
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "tsconfig.app.json",
              "tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    },
    "<%= name %>-e2e": {
      "root": "e2e/",
      "projectType": "application",
      "architect": {
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "e2e/protractor.conf.js",
            "devServerTarget": "<%= name %>:serve"
          },
          "configurations": {
            "production": {
              "devServerTarget": "<%= name %>:serve:production"
            }
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": "e2e/tsconfig.e2e.json",
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "<%= name %>"
}