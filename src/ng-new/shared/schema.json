{
  "$schema": "http://json-schema.org/schema",
  "id": "SchematicsNativeScriptAngularShared",
  "title": "NativeScript Angular shared Options Schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the app.",
      "alias": "n"
    },
    "sourceDir": {
      "type": "string",
      "description": "The name of the source directory.",
      "alias": "sd",
      "default": "src"
    },
    "prefix": {
      "type": "string",
      "description": "The prefix to apply to generated selectors.",
      "default": "app",
      "alias": "p"
    },
    "style": {
      "type": "string",
      "enum": [
        "css",
        "scss"
      ],
      "description": "The file extension to be used for style files. Supported are css and scss",
      "default": "css"
    },
    "theme": {
      "type": "boolean",
      "description": "Specifies whether the {N} theme for styling should be included.",
      "default": true
    }
  },
  "required": [
    "name"
  ]
}
