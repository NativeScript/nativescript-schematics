{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es2015",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "lib": [
      "es2017",
      "dom",
      "es6"
    ],
    "baseUrl": ".",
    "paths": {
      "*": [
        "./node_modules/@nativescript/core/*",
        "./node_modules/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "platforms"
  ]
}
