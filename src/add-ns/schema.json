{
  "$schema": "http://json-schema.org/schema",
  "id": "SchematicsAddNativeScript",
  "title": "NativeScript Angular add-ns Options Schema",
  "type": "object",
  "properties": {
    "nsExtension": {
      "type": "string",
      "description": "Allows specification of the used extension for {N}",
      "default": "tns"
    },
    "webExtension": {
      "type": "string",
      "description": "Allows specification of the used extension for web",
      "default": ""
    },
    "project": {
      "type": "string",
      "description": "The name of the project.",
      "$default": {
        "$source": "projectName"
      },
    },
    "sample": {
      "type": "boolean",
      "description": "Specifies whether a sample master detail should be generated.",
      "default": false
    },
    "skipInstall": {
      "description": "Skip installing dependency packages.",
      "type": "boolean",
      "default": false
    },
    "skipAutoGeneratedComponent": {
      "description": "Skip adding an example component.",
      "type": "boolean",
      "default": false
    }
  },
  "required": [
  ]
}
