{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "paths": {
      "@src/*": [
        "<%= sourceDir %>/*.android.ts",
        "<%= sourceDir %>/*.ios.ts",
        "<%= sourceDir %>/*.tns.ts",
        "<%= sourceDir %>/*.ts"
      ]
    }
  },
  "files": [
    "<%= sourceDir %>/main<%= nsext %>.ts"
  ]
}