{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "paths": {
      "@src/*": [
        "<%= sourceDir %>/*.android",
        "<%= sourceDir %>/*.ios",
        "<%= sourceDir %>/*.tns",
        "<%= sourceDir %>/*"
      ]
    }
  },
  "files": [
    "<%= sourceDir %>/main<%= nsext %>.ts"
  ]
}